# Public Site URL (required for SEO, sitemap, OG images)
PUBLIC_SITE_URL=https://ecohubs.community

# Newsletter Integration - Linkmonk
LINKMONK_URL=https://newsletter.ecohubs.community
LINKMONK_API_KEY=your_linkmonk_api_key_here

# SMTP Configuration for Nodemailer
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# Email Sender Configuration
EMAIL_FROM=noreply@ecohubs.community
EMAIL_FROM_NAME=EcoHubs Community
EMAIL_REPLY_TO=hello@ecohubs.community
ADMIN_EMAIL=admin@ecohubs.community

# Optional: Zapier Webhook Integration
ZAPIER_WEBHOOK_URL=

# Optional: Airtable Integration
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_APPLICATIONS_TABLE=Applications

# Optional: GitHub Integration
GITHUB_TOKEN=
GITHUB_REPO=ecohubs/applications
GITHUB_OWNER=ecohubs

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=5
